<resources>
    <declare-styleable name="DotProgressBar">
        <attr name="dotRadius" format="dimension" />
        <attr name="numberOfDots" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="minScale" format="float" />
        <attr name="maxScale" format="float" />
        <attr name="dotBackground" format="reference" />
        <attr name="margin" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="CenteredTitleToolbar">
        <attr name="title" />
    </declare-styleable>
</resources>